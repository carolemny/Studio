<%= form_with(model: user, local: true) do |form| %>
  <div class="form-group my-font-primary">
    <%= form.label "Prénom" %>
    <%= form.text_field :first_name, class:"form-control my-2" %>
  </div>

  <div class="form-group my-font-primary">
    <%= form.label 'Nom' %>
    <%= form.text_field :last_name, class:"form-control my-2" %>
  </div>

  <div class="form-group my-font-primary">
    <%= form.label 'Téléphone' %>
    <%= form.text_field :phone_number, class:"form-control my-2" %>
  </div>

  <div class="form-group my-font-primary">
    <%= form.label 'Description' %>
    <%= form.text_area :description, class:"form-control my-2" %>
  </div>

  <div class="form-group my-font-primary">
    <%= form.label :avatar, "Choisir une image de profil", required: true %>
    <%= form.file_field :avatar, class: "form-control my-2" %>
  </div>

  <div class="actions text-center">    
    <%= submit_tag "Modifier mes informations", class:"my-btn col-md-12" %>
  </div>
  <br>

  <%= link_to "Retour", :back, class:"my-link" %>
  
<% end %> 