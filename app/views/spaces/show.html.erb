<div class="container">
  <div class="row justify-content-center px-5">
    <div class="col-lg-12">
      <div class="my-border-card p-5" >
        <div class="card-body">
          <div>
            <p class="card-title my-font-primary fs-4"><%= @space.title %></p>
          </div>
          <div class="d-flex justify-content-between">
            <div>
              <i class="far fa-comment-alt px-2 my-text-primary"></i>
              <%= link_to 'Voir les commentaires', root_path, class: "my-link" %>
            </div>
            <div>
              <i class="far fa-heart px-2 my-text-primary"></i>
              <%= link_to 'Ajouter aux favoris', root_path, class: "my-link" %>
            </div>
          </div>
          <div class="flat-content">
            <div class="py-3">
              <% @space.images.each do |image| %>
                <%= image_tag image, width: "100%" %>
              <% end %>
            </div>
          </div>
          <div>
            <p class="card-text"><%= @space.description %></p>
          </div>
        </div>
      </div>
  </div>

  <div class="d-flex justify-content-end">
    <h3>
      <span class="badge badge-light text-dark"> 
        <% @space.join_space_categories.each do |join| %>
          <%= join.category.name %>
        <% end %>
      </span>
    </h3>
  </div>

  <hr class="my-4">

  <div class="row">
    <div class="col-md-12 col-lg-6 p-3">
      <p class="card-text my-lead"><i class="fas fa-map-marker-alt mx-3 my-text-primary"></i><%= @space.city %></p>
      <p class="card-text"><i class="far fa-user mx-3 my-text-primary"></i><%= @space.host.first_name %> <%= @space.host.last_name %><p>
      <p class="card-text"><i class="fas fa-euro-sign mx-3 my-text-primary"></i> <%= @space.price %> €/jour</p>
    </div>
    <div class="col-md-12 col-lg-6  p-3 booking">
      <%= form_tag(checkout_create_path, method: "post", remote: true) do %>
        <div class="row">
          <div class="col-sm-12 col-md-6">
            <div class="p-2">
              <p class="m-0 small my-lead">ARRIVÉE</p>
            </div>
            <div class="p-2">
              <%= date_field_tag 'start_date', @booking.start_date, class:"form-control", required: true %>
            </div>
          </div>
          <div class="col-sm-12 col-md-6">
            <div class="p-2">
              <p class="m-0 small my-lead">DÉPART</p>
            </div>
            <div class="p-2">
              <%= date_field_tag 'end_date', @booking.end_date, class:"form-control", required: true %>
            </div>
          </div>
        </div>

        <%= hidden_field_tag 'total', @space.price %>
        <%= hidden_field_tag 'space_id', @space.id %>

        <% if user_signed_in? %>
          <div class="p-4 text-center p-4">
            <%= button_to "Vérifier la disponibilité", checkout_create_path, class:"my-btn w-100" %>
          </div>
        <% else %>
          <div class="p-4 text-center p-4">
            <%= link_to "Vérifier la disponibilité", new_user_session_path, class:"my-btn w-100" %>
          </div>
        <% end %>

      <% end %>
    </div>
  </div>
   
  <div class="p-3">
    <% if user_signed_in? && current_user.id == @space.host_id %>
      <%= link_to 'Modifier', edit_space_path(@space), class:"my-link" %> 
    <% end %>
      <%= link_to 'Retour', spaces_path, class:"my-link" %>  
  </div>
</div>



