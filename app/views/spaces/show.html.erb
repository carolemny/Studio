<div class="row justify-content-center">
  <div class=" col-md-6">
    <div class="card text-center pt-4" >
      <div class="card-body">
        <div class="flat-content">
          <div>
            <% @space.images.each do |image| %>
              <%= image_tag image, height: 500, width: 500 %>
            <% end %>
          </div>
        </div>
        <p class="card-title">Titre: <%= @space.title %></p>
        <p class="card-text">Description: <%= @space.description %></p>
        <p class="card-text">Code postal: <%= @space.zip_code %></p>
        <p class="card-text">Adresse: <%= @space.address %></p>
        <p class="card-text">Ville: <%= @space.city %></p>
        <p class="card-text">Hôte: <%= @space.host.first_name %> <%= @space.host.last_name %></p>
        <p class="card-text">Prix (€/h): <%= @space.price %></p>
      </div>
    </div>

    <div class="d-flex justify-content-end">
      <h3>
        <span class="badge badge-light text-dark"> 
          <% @space.join_space_categories.each do |join| %>
            <%= join.category.name %>
          <% end %>
        </span>
      </h3>
    </div>

    <div class="mx-auto p-2 my-2 d-flex justify-content-end">
      <div class="mx-auto d-flex justify-content-center">
        <%= form_tag(checkout_create_path, method: "post", remote: true) do %>
          <div class="my-2"><%= label_tag 'Quand veux-tu réserver cet espace ?' %></div>
          <div class="my-2"><%= datetime_local_field_tag 'start_date', @booking.start_date, class:"form-control", required: true %></div>
          <%= hidden_field_tag 'total', @space.price %>
          <div><%= button_to "Je réserve", checkout_create_path %></div>
        <% end %>
      </div>
    </div>
   
    <div>
      <% if user_signed_in? && current_user.id == @space.host_id %>
      <%= link_to 'Modifier', edit_space_path(@space) %> 
      <% end %>
      <%= link_to 'Retour', spaces_path %>  
    </div>
  </div>    
</div>



