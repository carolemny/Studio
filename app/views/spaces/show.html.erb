<div class="row justify-content-center">
  <div class=" col-md-6">
    <div class="card text-center pt-4" >
      
      <div class="card-body">
      <div class="flat-content">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
   
      <% @space.images.each do |image| %>
        <div class="carousel-item">
          <%= image_tag image, height: 500, width: 700 %>
        </div>
      <% end %> 
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
       <span class="carousel-control-next-icon" aria-hidden="true"></span>
       <span class="sr-only">Next</span>
    </a>
  </div>
</div>
        <p class="card-title">Description: <%= @space.description %></p>
        <p class="card-text">Code postal: <%= @space.zip_code %></p>
        <p class="card-text">Adresse: <%= @space.address %></p>
        <p class="card-text">Ville: <%= @space.city %></p>
        <p class="card-text">HÃ´te: <%= @space.host.first_name %> <%= @space.host.last_name %></p>
      </div>
    </div>

    <div class="d-flex justify-content-end">
      <h3>
        <span class="badge badge-light text-dark"> 
          <% @space.join_space_categories.each do |join| %>
            <%= join.category.name %>
          <% end %>
        </span>
      </h3>
    </div>

    <br>
    <% if user_signed_in? && current_user.id == @space.host_id %>
    <%= link_to 'Modifier', edit_space_path(@space) %> 
    <% end %>
    <%= link_to 'Retour', spaces_path %>  

  </div>    
</div>



