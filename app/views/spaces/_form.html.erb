<%= form_with(model: space, local: true) do |form| %>
  <% if space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(space.errors.count, "error") %> prohibited this space from being saved:</h2>

      <ul>
      <% space.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= form.label :title, "Titre" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
   <div class="field form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= form.label :zip_code, "Code postal" %>
    <%= form.text_field :zip_code, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= form.label :address, "Adresse" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= form.label :city, "Ville" %>
    <%= form.text_field :city, class: "form-control" %>
  </div>
  <br>
  <div class="field form-group">
    <%= form.label :price, "Prix (en € par heure)" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>
  <br>
  <div>
    <%= select_tag 'category', options_from_collection_for_select(Category.all, "id", "name"), include_blank: "Rechercher par catégorie ", class: "form-control"%>
  </div>
  <br>
  <div>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit "Rechercher", class: "my-btn my-btn col-md-12 " %>
  </div>
<% end %>
