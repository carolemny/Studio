<div class="row">
  <% @spaces.each do |space| %>
    <div class="col-md-6 col-lg-4 py-3">
      <div class="card h-100 my-card-hover my-card-hover:hover my-border-card">
        <%= image_tag space.images[0], width: "100%", height: "300px" %>
        <div class="card-body px-4">
          <h4 class="card-title"><%= space.title %></h4>
          <p class="card-title"><%= space.description %></p>
          <p class="card-text"><%= space.city %></p>
            <%= link_to "Voir plus", space_path(space.id), class:"my-btn-secondary my-btn-secondary-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
