<div class="my-list-group space-container">
  <ul>
    <% @spaces.each do |space| %>
      <li class="d-flex align-items-center py-2 card-wrapper">
        <%= link_to space_path(space.id), class:"" do %>
          <div class=" d-flex card-responsive">
            <div><%= image_tag space.images.first, height: "250vh" %></div>
             <div class="card-body ">
               <h3 class="card-title"><%= space.title %></h3>
                 <p class="fs-5 pt-2"><%= space.description %></p>
                   <div class="d-flex align-items-baseline">
                     <span class="my-text-primary"><%=space.city%></span>
                       <% space.join_space_categories.each do |join| %>
                     <span class="mx-3"><%=join.category.name %></span>
                       <% end %>
                   </div>
            </div>
          </div>
        <% end%>
      </li>
    <%end%>
  </ul>
</div>

