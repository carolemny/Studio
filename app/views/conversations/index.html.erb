<div class=”ui segment”>
 <h3>Mes messages</h3>
 <div class=”ui list”>
  <div class=”item”>
  
   <% current_user.conversations.each do |conversation| %>
    <% if current_user.id == conversation.contact2_id %>
        <%= conversation.contact1.full_name %>
    <% else %>
        <%= conversation.contact2.full_name %>
    <% end %>

    <tr>
      <td class="d-flex justify-content-between align-items-center">              
        <div class="d-flex">

          <%= link_to "Voir la conversation", conversation_path(conversation.id), class: "my-link" %>
        </div>
      </td>
    </tr>
  <%end %>
  </div>
 </div>
</div>


