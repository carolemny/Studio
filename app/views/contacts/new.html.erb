

<div class="row">
    <div class="col-md-5 m-auto shadow-sm bg-white  py-3 appear mt-5">
        <%= form_for(@contact) do |f| %>
            <% if @contact.errors.any? %>
            <div id="error_explanation">
                <h3><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
        
                <ul>
                <% @contact.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
            <% end %>
            <h1 class="my-text-primary text-center">Votre message</h1>
            <div class="field form-group">
            <%= f.label :name, "Nom" %><br/>
            <%= f.text_field :name, class: "form-control" %>
            </div>
            <br>
            <div class="field form-group">
            <%= f.label :email %><br/>
            <%= f.text_field :email, class: "form-control" %>
            </div>
            <br>
            <div class="field form-group">
            <%= f.label :body, "Message" %><br/>
            <%= f.text_area :body, class: "form-control" %>
            </div>
            <br>
            <div class="actions">
            <%= f.submit "Envoyer", class: "my-btn my-btn col-md-12"%>
            </div>
        <% end %>
    </div>
</div>