<div class="row">
  <div class="col-md-4 min-vh-100 background-image d-flex justify-content-center align-items-end ">
  <%= link_to "STUDIO", root_path, class:"my-logo-white pb-5 appear-bottom" %>
  </div>

  <div class="col-8 d-flex justify-content-center align-items-center"> 

  <div class="border p-5 my-bg-light appear">

    <h2 class="mb-3 text-center">Mot de passe oubliÃ©</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email, "Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
        <br>

      <div class="actions text-center">
        <%= f.submit "Envoyer les instructions", class: "my-btn my-btn col-md-12" %>
      </div>
        <% end %>
        <br>

      <%= render "devise/shared/links" %>

  </div>
</div>